<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="@drawable/nav"   >

    <Button
       android:layout_marginTop="100dp"
       android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Tracker"
        android:id="@+id/bTracker"
        android:background="@android:color/holo_orange_light"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="ManageDB"
        android:id="@+id/bManageDB"
        android:background="@android:color/holo_orange_light"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/startX"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:text="26"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/startY"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:text="10"/>

    <RadioGroup
        android:id="@+id/radioDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="north"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="south"/>

        <RadioButton
            android:id="@+id/radioE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="east"/>

        <RadioButton
            android:id="@+id/radioW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="west"/>

        <RadioButton
            android:id="@+id/radioSW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="southwest"/>

        <RadioButton
            android:id="@+id/radioNE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="northeast"/>

    </RadioGroup>

</LinearLayout>